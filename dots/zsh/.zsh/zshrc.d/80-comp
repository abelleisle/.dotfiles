# ZSH Completions
#
# Enable completion debugging
# zstyle ':completion:*' verbose yes
# zstyle ':completion:*' format 'Completing %d'

# Enable menu selection for completions (easier to see)
zstyle ':completion:*:*:*:*:*' menu select

# Case insensitive (all), partial-word and substring completion
zstyle ':completion:*' matcher-list 'm:{[:lower:][:upper:]}={[:upper:][:lower:]}' 'r:|=*' 'l:|=* r:|=*'

# Neovim completions for non-binary files
zstyle ':completion:*:*:nvim:*' file-patterns '^*.(aux|pdf|dvi|o|elf|bin):source-files' '*:all-files'

# Complete . and .. special directories
zstyle ':completion:*' special-dirs true

# Colors in completion
zstyle ':completion:*' list-colors ''
zstyle ':completion:*:*:kill:*:processes' list-colors '=(#b) #([0-9]#) ([0-9a-z-]#)*=01;34=0=01'

# Disable named-directories autocompletion
zstyle ':completion:*:cd:*' tag-order local-directories directory-stack path-directories

# Use caching so commands with a lot of entries are usable
zstyle ':completion:*' use-cache yes
zstyle ':completion:*' cache-path $ZSH_CACHE_DIR

if [ -d ~/.zfunc ]; then
    fpath=(${HOME:-~}/.zfunc $fpath)
fi

fpath=(${ZDOTDIR}/completions.d $fpath)


# vim:ft=zsh
