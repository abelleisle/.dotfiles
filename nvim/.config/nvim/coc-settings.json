{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp", "h", "hpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
         "compilationDatabaseDirectory": "build",
         "cache": {
           "directory": "/tmp/ccls"
         },
         "highlight": { "lsRanges": true }
       }
    },
    "hdlChecker": {
    "command": "hdl_checker",
    "args": [
        "--lsp"
    ],
    "filetypes": [
        "vhdl",
        "verilog",
        "systemverilog"
    ]
    }
  },
  "git.addGBlameToVirtualText": true
}
