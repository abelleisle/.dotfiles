#
# wm independent hotkeys
#

# terminal emulator
super + Return
	urxvt

# program launcher
super + d
	rofi -show run -display-run ">>>"

super + shift + d
    rofi -show window -display-window ">>>"

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# run keepassxc
super + shift + backslash
	keepassxc

# auto type keepass password
super + backslash
	keepassxc --auto-type
#
# mpc controls
#

# play/pause
XF86AudioPlay
	mpc toggle

# next song
XF86AudioNext
	mpc next

# previous song
XF86AudioPrev
	mpc prev

# raise volume
XF86AudioRaiseVolume
	mpc volume +2

# lower volume
XF86AudioLowerVolume
	mpc volume -2

#
# general keybinds
